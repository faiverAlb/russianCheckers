<Window x:Class="RussianCheckers.NotificationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RussianCheckers"
        mc:Ignorable="d"
        Title="NotificationDialog" Height="100" Width="200" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding NotificationMessage}"></TextBlock>
    </Grid>
</Window>
